{
	//===========================================
	//============= Editor ======================
	//===========================================
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,

	//===========================================
	//============= Linters =====================
	//===========================================

	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"css.validate": false,
	"scss.validate": false,
	"stylelint.enable": true,
	"stylelint.validate": ["css", "scss"],
	"stylelint.packageManager": "pnpm",
	"eslint.packageManager": "pnpm",
	"prettier.requireConfig": true,
	//===========================================
	//============= Other =======================
	//===========================================
	"npm.packageManager": "pnpm",
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	//===========================================
	//============= cSpell ======================
	//===========================================
	"cSpell.enabledLanguageIds": ["markdown", "plaintext", "text", "yml"],
	"cSpell.language": "en,ru",
	"cSpell.enableFiletypes": [
		"jsonc",
		"typescript",
		"typescriptreact",
		"json",
		"javascript"
	],
	"cSpell.words": [
		"vben",
		"windi",
		"browserslist",
		"tailwindcss",
		"esnext",
		"antv",
		"tinymce",
		"qrcode",
		"sider",
		"pinia",
		"sider",
		"nprogress",
		"EDITMSG",
		"INTLIFY",
		"stylelint",
		"esno",
		"vitejs",
		"sortablejs",
		"mockjs",
		"codemirror",
		"iconify",
		"commitlint",
		"vditor",
		"echarts",
		"cropperjs",
		"logicflow",
		"wemake",
		"vueuse",
		"zxcvbn",
		"lintstagedrc",
		"brotli",
		"tailwindcss",
		"sider",
		"tanstack",
		"nextjs",
		"preinstall",
		"trivago",
		"svgr",
		"abouts",
		"hookform"
	],
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#90e3cd",
		"activityBar.background": "#90e3cd",
		"activityBar.foreground": "#15202b",
		"activityBar.inactiveForeground": "#15202b99",
		"activityBarBadge.background": "#ba66d8",
		"activityBarBadge.foreground": "#15202b",
		"commandCenter.border": "#15202b99",
		"sash.hoverBorder": "#90e3cd",
		"statusBar.background": "#67d9bb",
		"statusBar.foreground": "#15202b",
		"statusBarItem.hoverBackground": "#3ecfa9",
		"statusBarItem.remoteBackground": "#67d9bb",
		"statusBarItem.remoteForeground": "#15202b",
		"titleBar.activeBackground": "#67d9bb",
		"titleBar.activeForeground": "#15202b",
		"titleBar.inactiveBackground": "#67d9bb99",
		"titleBar.inactiveForeground": "#15202b99"
	},
	"peacock.color": "#67d9bb"
}
